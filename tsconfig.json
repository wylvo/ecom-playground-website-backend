{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noStrictGenericChecks": false,

    "jsx": "react-jsx",

    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "tests"]
}
