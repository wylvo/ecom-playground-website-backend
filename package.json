{
  "name": "ecom-website-playgroung-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json && resolve-tspaths -p tsconfig.build.json -s ./src -o ./dist",
    "start": "npm run build && node ./dist/index.js",
    "dev": "nodemon --exec npx tsx src/index.ts",
    "dev:tsx": "tsx watch src --env-file=.env",
    "db:generate": "npx drizzle-kit generate --config=./src/db/drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config=./src/db/drizzle.config.ts",
    "db:pull": "npx drizzle-kit pull --config=./src/db/drizzle.config.ts",
    "db:reset": "npx tsx ./src/db/reset.ts",
    "db:seed": "npm run db:reset && npx tsx ./src/db/seed.ts",
    "db:test": "npx tsx ./src/db/index.ts",
    "email": "email dev --dir src/emails --port 3001"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@react-email/components": "0.5.2",
    "disposable-domains": "^1.0.13",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.1.0",
    "jose": "^6.1.0",
    "postgres": "^3.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "resend": "^6.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@react-email/preview-server": "^4.2.11",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "nodemon": "^3.1.10",
    "react-email": "4.2.8",
    "resolve-tspaths": "^0.8.23",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
